{{#if error}}
<div class="alert alert-icon alert-danger alert-dismissible" role="alert">
  <i class="fe fe-alert-triangle mr-2" aria-hidden="true"></i> {{ error }}
</div>
{{/if}}
<form action="/settings/decrypt" method="post" class="card">
  <div class="card-header">
    <h3 class="card-title">Encrypted Configuration Found</h3>
  </div>
  <div class="card-body">
    <div class="form-group">
      <label class="form-label">Master Password</label>
      <input type="text" class="form-control" name="masterPassword" placeholder="Enter Master Password" required>
    </div>
    <div class="d-flex">
      <button type="submit" class="btn btn-primary ml-auto">Decrypt</button>
    </div>
  </div>
</form>