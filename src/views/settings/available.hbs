<form class="card">
  <div class="card-header">
    <h3 class="card-title">Saved Configuration</h3>
  </div>
  <div class="card-body">
    <div class="form-group">
      <label class="form-label">Access Key Id</label>
      <input type="text" class="form-control" name="accessKeyId" disabled value={{ data.accessKeyId }}>
    </div>
    <div class="form-group">
      <label class="form-label">Secret Access Key</label>
      <input type="text" class="form-control" name="secretAccessKey" disabled value={{ data.secretAccessKey }}>
    </div>
    <div class="form-group">
      <label class="form-label">Region</label>
      <input type="text" class="form-control" name="secretAccessKey" disabled value={{ data.region }}>
    </div>
    <div class="d-flex">
      <button onclick="deleteAWSConfig()" class="btn btn-danger ml-auto">Delete</button>
    </div>
  </div>
</form>
<script>
  function deleteAWSConfig() {
    return fetch('/settings', {
      method: 'delete'
    }).then(response => {
      window.location = response.url;
    });
  }
</script>